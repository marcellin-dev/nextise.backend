generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  lastLogin DateTime?
  Course    Course[]
  Trainer   Trainer[]
}

model Otp {
  id        String   @id @unique @default(uuid())
  otp       String
  email     String?
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id            String   @id @default(uuid())
  name          String
  date          DateTime
  subject       String
  location      String
  participants  Int
  notes         String?
  price         Float
  trainer_price Float
  trainer_id    String?
  trainer       Trainer? @relation(fields: [trainer_id], references: [id])
  user_id       String
  user          User     @relation(fields: [user_id], references: [id])

  @@map("courses")
}

model Trainer {
  id                String   @id @default(uuid())
  name              String
  training_subjects String[]
  location          String
  email             String   @unique
  courses           Course[]
  user_id           String
  user              User     @relation(fields: [user_id], references: [id])

  @@map("trainers")
}
